# MonPeer Environment Configuration
# COPY THIS TO .env AND FILL IN YOUR VALUES
# DO NOT COMMIT .env TO GIT

# ===================================
# DATABASE (Docker-Compose)
# ===================================
POSTGRES_USER=clawmonpeer
POSTGRES_PASSWORD=clawmonpeer
POSTGRES_DB=clawmonpeer
DATABASE_URL=postgresql://clawmonpeer:clawmonpeer@db:5432/clawmonpeer?schema=public

# ===================================
# BACKEND
# ===================================

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Wallet encryption (generate with: openssl rand -hex 32)
# Required for AA wallet creation
MASTER_SECRET=


# ===================================
# FRONTEND (Next.js Build-time)
# ===================================

# API URL for backend requests
NEXT_PUBLIC_API_URL=http://localhost:3001

# Site URL for skill.md and UI links
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# For production:
# NEXT_PUBLIC_API_URL=https://api.clawmonpeer.xyz
# NEXT_PUBLIC_SITE_URL=https://clawmonpeer.xyz

# ===================================
# LI.FI + Redis
# ===================================

# Redis for caching LI.FI quotes, prices, etc.
REDIS_URL=redis://redis:6379

# LI.FI integrator name (for analytics attribution)
LIFI_INTEGRATOR=clawmonpeer
# LI.FI API key (get from portal.li.fi â€” higher rate limits)
LIFI_API_KEY=

# ===================================
# ENS Integration
# ===================================

# Set to "true" for mainnet, "false" or omit for Sepolia testnet
ENS_MAINNET=false

# Parent ENS domain (registered once on app.ens.domains)
ENS_PARENT_NAME=clawmonpeer.eth

# Private key of the wallet that owns clawmonpeer.eth
# This wallet pays gas for creating bot subdomains and setting text records
# Must be a 0x-prefixed 32-byte hex string (64 hex chars), e.g. 0xabc123...
# On Sepolia: free (testnet ETH). On Mainnet: ~$3-5 per bot.
ENS_DEPLOYER_PRIVATE_KEY=

# RPC URL for ENS contract calls (auto-selects public RPC if not set)
ENS_RPC_URL=

# Frontend ENS configuration
# Set to "true" for mainnet ENS lookups in the frontend
NEXT_PUBLIC_ENS_MAINNET=false
# Optional: custom RPC URLs for frontend ENS resolution
# NEXT_PUBLIC_SEPOLIA_RPC_URL=
# NEXT_PUBLIC_MAINNET_RPC_URL=

# ===================================
# P2P Trading (MonPeer Hook on Monad)
# ===================================

# Monad chain
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_RPC_URL=https://rpc.monad.xyz
# Set to "true" to use mainnet
MONAD_MAINNET=false

# Admin private key that can whitelist bots on the hook contract
HOOK_ADMIN_PRIVATE_KEY=

# Contract addresses (deploy on Monad, then fill in)
HOOK_ADDRESS=
SWAP_ROUTER_ADDRESS=
POOL_MANAGER_ADDRESS=

# nad.fun token integration
NADFUN_API_URL=https://testnet-api.nad.fun
NADFUN_BONDING_CURVE_ROUTER=
NADFUN_CURVE=
NADFUN_LENS=
NADFUN_DEX_ROUTER=
NADFUN_WMON=

# MonPeer token (launched on nad.fun)
MONPEER_TOKEN_ADDRESS=
MIN_TOKEN_BALANCE=0

# ===================================
# OPTIONAL - API Keys
# ===================================

# Account Abstraction (Pimlico bundler/paymaster)
# Get API key from: https://dashboard.pimlico.io
# Uses url pattern: https://api.pimlico.io/v2/{chainId}/rpc?apikey={key}
# Without API key, falls back to public.pimlico.io (rate limited)
PIMLICO_API_KEY=

# Premium RPC providers (improves reliability)
# Leave empty to use free public RPCs
ALCHEMY_API_KEY=
INFURA_PROJECT_ID=

# Custom RPC URLs (optional)
DEFAULT_BASE_RPC_URL=
DEFAULT_SEPOLIA_RPC_URL=
DEFAULT_ETH_MAINNET_RPC_URL=

# Monad frontend RPC
NEXT_PUBLIC_MONAD_RPC_URL=https://testnet-rpc.monad.xyz