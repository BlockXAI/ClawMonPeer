# ── MonPeer Backend Environment Variables ──

# Server
PORT=3001
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/clawmonpeer

# Redis
REDIS_URL=redis://localhost:6379

# Master secret for wallet encryption (AES-256-GCM)
MASTER_SECRET=your-32-byte-hex-secret-here

# ── Monad Chain Configuration ──
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_RPC_URL=https://rpc.monad.xyz
# Set to "true" to use Monad mainnet instead of testnet
MONAD_MAINNET=false

# ── Smart Contract Addresses (deploy on Monad, then fill these in) ──
HOOK_ADDRESS=0x...
SWAP_ROUTER_ADDRESS=0x...
POOL_MANAGER_ADDRESS=0x...
HOOK_ADMIN_PRIVATE_KEY=0x...

# ── nad.fun Contract Addresses (Monad) ──
NADFUN_API_URL=https://testnet-api.nad.fun
NADFUN_BONDING_CURVE_ROUTER=0x...
NADFUN_CURVE=0x...
NADFUN_LENS=0x...
NADFUN_DEX_ROUTER=0x...
NADFUN_WMON=0x...

# ── MonPeer Token (launched on nad.fun) ──
MONPEER_TOKEN_ADDRESS=0x...
# Minimum token balance to post P2P orders (0 = no gate)
MIN_TOKEN_BALANCE=0

# ── LI.FI SDK (optional, for cross-chain swaps) ──
LIFI_API_KEY=

# ── Pimlico (optional, for AA on EVM chains other than Monad) ──
PIMLICO_API_KEY=

# ── ENS (optional, legacy — not used on Monad) ──
ENS_CHAIN=sepolia
ENS_REGISTRY_OWNER_KEY=
